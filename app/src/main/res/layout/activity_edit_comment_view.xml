<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.views.comment.EditCommentView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/editCommentAppIcon"
            android:layout_centerHorizontal="true"
            android:layout_width="292dp"
            android:layout_height="54dp"
            android:background="@drawable/app_icon"
            android:layout_alignParentTop="true"
            android:importantForAccessibility="no" />
        <LinearLayout
            android:id="@+id/editCommentTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editCommentAppIcon">
            <TextView
                android:id="@+id/returnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/back_icon_foreground"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/pageRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="5dp"
                android:text="Add comment"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/editCommentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@id/editCommentTop"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="81dp"
                android:layout_weight="0.2">
                <ImageView
                    android:id="@+id/baseImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/account_base_img"
                    app:strokeWidth="3dp"
                    android:padding="5dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    tools:ignore="ImageContrastCheck"/>
                <ProgressBar
                    android:id="@+id/editCommentProgressBar1"
                    android:indeterminateTint="#4900FF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:visibility="invisible"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/editCommentUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:strokeWidth="3dp"
                    android:padding="5dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:visibility="invisible"
                    tools:ignore="ImageContrastCheck"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <EditText
                        android:id="@+id/editCommentDescription"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:background="@drawable/rounded_pill_purple_stroke"
                        android:ems="10"
                        android:hint="@string/description"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        tools:ignore="VisualLintTextFieldSize"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/editCommentImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Image"
                    android:gravity="center"
                    android:drawableStart="@drawable/camera_icon_foreground"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/editCommentImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editCommentContent"
            android:visibility="visible">
            <ProgressBar
                android:id="@+id/editCommentProgress1"
                android:indeterminateTint="#4900FF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxHeight="10000dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/editCommentPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="10000dp"
                android:importantForAccessibility="no"
                android:scaleType="fitXY"
                tools:ignore="ImageContrastCheck"
                android:adjustViewBounds="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/editCommentConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:rotation="-45"
            android:drawableEnd="@drawable/send_icon_foreground"/>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>