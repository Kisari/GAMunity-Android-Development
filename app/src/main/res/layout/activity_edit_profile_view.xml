<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:background="@drawable/app_icon"
            android:layout_gravity="center_horizontal"
            android:layout_width="146dp"
            android:layout_height="27.16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:importantForAccessibility="no" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/returnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/back_icon_foreground"
                    android:importantForAccessibility="no">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit profile"
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#757575" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/editProfileSubmitButton"
                    android:rotation="-45"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/send_icon_foreground"
                    android:importantForAccessibility="no">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/profileInfo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="10dp">

            <ProgressBar
                android:id="@+id/progress_bar_1"
                android:indeterminateTint="#4900FF"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:visibility="visible"/>
            
            <ImageView
                android:id="@+id/profileEditBackground"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:importantForAccessibility="no"
                android:scaleType="fitXY"
                tools:ignore="ImageContrastCheck"/>
            
            <ImageView
                android:id="@+id/editProfileBackgroundButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:importantForAccessibility="no"
                android:src="@drawable/camera_icon_foreground"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:id="@+id/editProfileIconButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/rounded_pill_white_stroke"
                android:importantForAccessibility="no"
                android:src="@drawable/camera_icon_foreground"
                tools:ignore="ImageContrastCheck" />

            <ProgressBar
                android:id="@+id/progress_bar_2"
                android:indeterminateTint="#4900FF"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="15dp"
                android:visibility="visible"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/editProfileIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center|bottom"
                android:padding="2dp"
                app:strokeWidth="3dp"
                app:strokeColor="@android:color/darker_gray"
                app:shapeAppearanceOverlay="@style/circleImageView"
                tools:ignore="ImageContrastCheck"/>

        </FrameLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            app:boxBackgroundColor="@android:color/transparent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editProfileFName"
                    android:layout_width="175dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/fill_box"
                    android:ems="10"
                    android:hint="First name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="VisualLintTextFieldSize">
                </EditText>

                <EditText
                    android:id="@+id/editProfileLName"
                    android:layout_width="175dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="0dp"
                    android:background="@drawable/fill_box"
                    android:ems="10"
                    android:hint="Last name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="VisualLintTextFieldSize">
                </EditText>

            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileDOBLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            app:boxBackgroundColor="@android:color/transparent" >

            <EditText
                android:id="@+id/editProfileDOB"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/fill_box"
                android:ems="10"
                android:hint="Date of birth"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="VisualLintTextFieldSize">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@android:color/transparent" >

            <EditText
                android:id="@+id/editProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/fill_box"
                android:ems="10"
                android:hint="Email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                tools:ignore="VisualLintTextFieldSize">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:text="Log out"
            android:textSize="16sp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@android:color/red"
            app:cornerRadius="12dp"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>