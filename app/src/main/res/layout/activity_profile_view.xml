<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profileTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:background="@drawable/app_icon"
            android:layout_centerHorizontal="true"
            android:layout_width="146dp"
            android:layout_height="27.16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:importantForAccessibility="no" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profileTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/profileInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end">

                    <TextView
                        android:id="@+id/profileMoreOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:menu="@menu/profile_more_option"
                        app:drawableEndCompat="@drawable/more_option_icon" />

                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/profileProgress1"
                    android:indeterminateTint="#4900FF"
                    android:layout_marginBottom="30dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/profileBackgroundImage"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:importantForAccessibility="no"
                    android:scaleType="fitXY"
                    tools:ignore="ImageContrastCheck" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="175dp"
                    android:background="@android:color/white">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center" >

                            <ProgressBar
                                android:id="@+id/profileProgress2"
                                android:indeterminateTint="#4900FF"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profilePicture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            app:strokeWidth="3dp"
                            app:strokeColor="@android:color/darker_gray"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:ignore="ImageContrastCheck" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profileName"
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:text="@string/text_view"
                            android:textSize="16sp" >

                        </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:text="@string/followers"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@color/gray_01" >
                            </TextView>

                            <TextView
                                android:layout_marginStart="4dp"
                                android:id="@+id/profileFollow"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:text="@string/text_view"
                                android:textSize="14sp"
                                android:textColor="@color/gray_01" >
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profileDOB"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/text_view"
                            android:textColor="@color/gray_01"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginEnd="4dp"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:text="@string/following"
                                android:textSize="14sp"
                                android:textColor="@color/gray_01" >
                            </TextView>

                            <TextView
                                android:id="@+id/profileFollowing"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:text="@string/text_view"
                                android:textSize="14sp"
                                android:textColor="@color/gray_01" >
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="54dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profileEmail"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:text="@string/text_view"
                            android:textSize="15sp"
                            android:textColor="@color/gray_01" >
                        </TextView>

                    </LinearLayout>

                </FrameLayout>
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profilePostList"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>