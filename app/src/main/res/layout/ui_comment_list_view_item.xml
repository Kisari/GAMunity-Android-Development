<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/commentTabContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="81dp"
            android:layout_weight="0.2">
            <ProgressBar
                android:id="@+id/commentTabProgressBar1"
                android:indeterminateTint="#4900FF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:visibility="visible"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/commentTabUserProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:strokeWidth="3dp"
                android:padding="5dp"
                app:strokeColor="@android:color/darker_gray"
                app:shapeAppearanceOverlay="@style/circleImageView"
                tools:ignore="ImageContrastCheck"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:padding="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/commentTabUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Username"/>
            <TextView
                android:id="@+id/commentTabTimestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Timestamp"/>
            <TextView
                android:id="@+id/commentTabDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:padding="5dp"
                android:hint="User comment"/>
            <TextView
                android:id="@+id/commentTabReply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Reply"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/commentTabImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentTabContent"
        android:paddingHorizontal="5dp"/>
    <RelativeLayout
        android:id="@+id/commentTabStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentTabImage">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/commentTabLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:visibility="visible"
                android:drawableStart="@drawable/like_unfill_icon"/>
            <TextView
                android:id="@+id/commentTabDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:visibility="visible"
                android:drawableStart="@drawable/dislike_unfill_icon"/>
            <TextView
                android:id="@+id/commentTabComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:drawableStart="@drawable/chat_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/commentTabLikeTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:visibility="invisible"
                android:drawableStart="@drawable/like_fill_icon"/>
            <TextView
                android:id="@+id/commentTabDislikeTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:visibility="invisible"
                android:drawableStart="@drawable/dislike_fill_icon"/>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/commentTabList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentTabStat"
        android:layout_marginStart="50dp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/commentTabMoreOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:padding="5dp"
        android:drawableStart="@drawable/more_option_icon"/>


</RelativeLayout>