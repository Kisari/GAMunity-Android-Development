<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.views.PostView">

    <LinearLayout
        android:id="@+id/postTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/returnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:drawableStart="@drawable/arrow_back"
            android:layout_gravity="center"
            android:paddingVertical="5dp"/>
        <TextView
            android:id="@+id/postForumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="5dp"
            android:text="Forum name"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/postUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@id/postTop"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/postUserProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="top">
            <TextView
                android:id="@+id/postUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/postTimestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timestamp"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/postContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/postUserInfo">
        <TextView
            android:id="@+id/postTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post's Title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"/>
        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/postDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post's Content"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/postStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/postContent">
        <TextView
            android:id="@+id/postLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:drawableStart="@drawable/like_icon"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/postDislikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:drawableStart="@drawable/dislike_icon"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/postCommentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:drawableStart="@drawable/chat_icon"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/postAddComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:padding="5dp"
            android:gravity="center"
            android:drawableEnd="@drawable/add_comment"/>
    </LinearLayout>

    <ListView
        android:id="@+id/postComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postStat"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/postMoreOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="370dp"
        android:visibility="visible"
        android:paddingStart="5dp"
        android:layout_below="@id/postTop"
        android:drawableStart="@drawable/more_option"/>

</RelativeLayout>