<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@raw/background"
    tools:context=".components.views.LoginView">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="225dp"
        android:layout_height="650dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/form">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Forgot Password"
                android:textSize="45sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple_01"/>

            <EditText
                android:id="@+id/reset_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/fill_box"
                android:layout_marginTop="25dp"
                android:padding="8dp"
                android:hint="Email"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="We will send you an email with instructions on how to reset your password."
                android:textColor="@color/gray_01"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/purple_01"
                    android:text="Cancel"
                    android:layout_marginEnd="23dp"
                    android:textSize="16sp"
                    app:cornerRadius="12dp" />

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/purple_01"
                    android:text="Reset"
                    android:textSize="16sp"
                    app:cornerRadius="12dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>